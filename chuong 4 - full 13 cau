# câu 1
import math

def dien_tich_tam_giac(a, b, c):
    # Kiểm tra điều kiện lập thành tam giác
    if a + b <= c or a + c <= b or b + c <= a:
        return "Ba cạnh không tạo thành tam giác hợp lệ!"

    # Công thức Heron
    p = (a + b + c) / 2
    dt = math.sqrt(p * (p - a) * (p - b) * (p - c))
    return dt

# Chương trình chính
a = float(input("Nhập cạnh a: "))
b = float(input("Nhập cạnh b: "))
c = float(input("Nhập cạnh c: "))

kq = dien_tich_tam_giac(a, b, c)
print("Diện tích tam giác là:", kq)

# câu 2
from random import randrange

def choi_game_doan_so():
    while True:
        somay = randrange(1, 101)
        solandoan = 0
        win = False

        while solandoan < 7:
            solandoan += 1
            try:
                songuoi = int(input("Máy ra số [1..100], mời bạn đoán: "))
            except:
                print("Vui lòng nhập số!")
                continue

            print("Bạn đoán lần thứ", solandoan)

            if songuoi == somay:
                print("Chúc mừng bạn đoán đúng! Số máy là =", somay)
                win = True
                break

            if songuoi < somay:
                print("Bạn đoán sai, số máy > số bạn đoán")
            else:
                print("Bạn đoán sai, số máy < số bạn đoán")

        if not win:
            print("GAME OVER! Số máy là =", somay)

        hoi = input("Tiếp tục chơi? (k để dừng): ")
        if hoi.lower() == 'k':
            break

    print("Cám ơn bạn đã chơi Game!")

# Gọi hàm để chạy game
choi_game_doan_so()
# câu 3
def tinh_bmi(can_nang, chieu_cao):
    # Tính BMI
    bmi = can_nang / (chieu_cao ** 2)

    # Phân loại theo bảng
    if bmi < 18.5:
        loai = "Gầy"
        nguy_co = "Thấp"
    elif bmi < 25:
        loai = "Bình thường"
        nguy_co = "Trung bình"
    elif bmi < 30:
        loai = "Thừa cân"
        nguy_co = "Cao"
    elif bmi < 35:
        loai = "Béo phì độ I"
        nguy_co = "Cao"
    elif bmi < 40:
        loai = "Béo phì độ II"
        nguy_co = "Rất cao"
    else:
        loai = "Béo phì độ III"
        nguy_co = "Nguy hiểm"

    return bmi, loai, nguy_co
    # Chương trình chính
can_nang = float(input("Nhập cân nặng (kg): "))
chieu_cao = float(input("Nhập chiều cao (m): "))

bmi, loai, nguy_co = tinh_bmi(can_nang, chieu_cao)

print(f"\nBMI = {bmi:.2f}")
print("Phân loại:", loai)
print("Nguy cơ:", nguy_co)

# Câu 4

def ROI(dt, cp):
    return (dt - cp) / cp

def GoiYDauTu(roi):
    if roi >= 0.75:
        return "Nên đầu tư"
    else:
        return "Không nên đầu tư"

print("Chương trình tính ROI")

dt = float(input("Nhập Doanh Thu: "))
cp = float(input("Nhập Chi Phí: "))

roi = ROI(dt, cp)

print("Tỉ lệ ROI =", roi)
print("==>", GoiYDauTu(roi))

# Câu 5: Viết hàm đệ quy Fibonacci

# Hàm trả về số Fibonacci tại vị trí thứ n
def fibonacci(n):
    if n <= 2:
        return 1
    return fibonacci(n - 1) + fibonacci(n - 2)

# Hàm in ra danh sách dãy Fibonacci từ 1 đến n
def listfibo(n):
    for i in range(1, n + 1):
        print(fibonacci(i), end='\t')

# Chạy thử
print("Fibonacci tại vị trí 9:", fibonacci(9))
print("Dãy Fibonacci từ 1 đến 9:")
listfibo(9)

