print("99   -> Có thể xuất hiện")

# câu 7
import math

def do_dai_AB(xa, ya, xb, yb):
    d = math.sqrt((xb - xa)**2 + (yb - ya)**2)
    return d

# Chương trình chính
xa = float(input("Nhập xA: "))
ya = float(input("Nhập yA: "))

xb = float(input("Nhập xB: "))
yb = float(input("Nhập yB: "))

d = do_dai_AB(xa, ya, xb, yb)
print(f"Độ dài đoạn AB = {d:.4f}")

# câu 8
import math

print("Chương trình tính log_a(x)")

# Nhập a và x
a = float(input("Nhập a: "))
x = float(input("Nhập x: "))

# Điều kiện: x > 0, a > 0 và a != 1
if x > 0 and a > 0 and a != 1:
    kq = math.log(x) / math.log(a)
    print("log_", a, "(", x, ") =", kq)
else:
    print("Giá trị a và x không hợp lệ (x > 0, a > 0, a != 1)")

# câu 9
import math

print("Chương trình tính căn bậc 2 lồng nhau")

n = int(input("Nhập n: "))

s = 0
for i in range(n):
    s = math.sqrt(2 + s)

print("Kết quả S(n) =", s)

