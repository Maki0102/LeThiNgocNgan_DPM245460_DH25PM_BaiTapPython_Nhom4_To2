# Câu 11: Kiểm tra kết quả thực hiện

def sum1(n):
    # sum1(n) sẽ cộng 1 đúng n lần, nên kết quả luôn bằng n
    s = 0
    while n > 0:
        s += 1
        n -= 1
    return s


def sum2():
    # sum2() dùng biến toàn cục val
    # Hàm này làm giảm val xuống 0
    # và trả về giá trị ban đầu của val
    global val
    s = 0
    while val > 0:
        s += 1
        val -= 1
    return s


def sum3():
    # sum3() đếm giảm từ val đến 1
    # Không làm thay đổi val
    # Kết quả bằng giá trị hiện tại của val
    global val
    s = 0
    for i in range(val, 0, -1):
        s += 1
    return s


print("=== TRƯỜNG HỢP 1 ===")
def main1():
    global val
    val = 5   # đặt val ban đầu = 5
    print(sum1(5))   # kết quả: 5
    print(sum2())    # dùng val=5 → trả 5, val trở về 0
    print(sum3())    # val=0 → sum3 trả 0
main1()


print("\n=== TRƯỜNG HỢP 2 ===")
def main2():
    global val
    val = 5
    print(sum1(5))   # trả 5
    print(sum3())    # val=5 → trả 5, val không đổi
    print(sum2())    # val=5 → trả 5, val trở về 0
main2()


print("\n=== TRƯỜNG HỢP 3 ===")
def main3():
    global val
    val = 5
    print(sum2())    # val=5 → trả 5, val trở về 0
    print(sum1(5))   # trả 5
    print(sum3())    # val=0 → trả 0
main3()

#===== TRƯỜNG HỢP 1 =====
5
5
0

===== TRƯỜNG HỢP 2 =====
5
5
5

===== TRƯỜNG HỢP 3 =====
5
5
0

# câu 12
 result = []
    
    # 1. Từ a lên đến -1 (các số âm tăng dần)
    for i in range(a, 0):
        result.append(i)
    
    # 2. Từ b xuống đến 1 (các số dương giảm dần)
    for i in range(b, 0, -1):
        result.append(i)
    
    # 3. Hai số 0 ở giữa
    result.append(0)
    result.append(0)
    
    # 4. Xen kẽ dương → âm từ 1 đến (b-1)
    for i in range(1, b):
        result.append(i) # dương
        result.append(-i) # âm
    
    return result

# câu 13
# Hàm tính tổng các ước số của n (không tính n)
def tong_uoc(n):
    s = 0
    for i in range(1, n):
        if n % i == 0:
            s += i
    return s

# a) Kiểm tra số hoàn thiện
def so_hoan_thien(n):
    if tong_uoc(n) == n:
        return True
    return False

# b) Kiểm tra số thịnh vượng
def so_thinh_vuong(n):
    if tong_uoc(n) > n:
        return True
    return False

# --- Chương trình chính ---
n = int(input("Nhập số nguyên dương n: "))

print("Tổng các ước số của", n, "là:", tong_uoc(n))

if so_hoan_thien(n):
    print(n, "là số hoàn thiện")
else:
    print(n, "không phải số hoàn thiện")

if so_thinh_vuong(n):
    print(n, "là số thịnh vượng")
else:
    print(n, "không phải số thịnh vượng")




